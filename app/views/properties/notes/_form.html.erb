<%= form_for [ @property, @note ] do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :notes, style: "display: block" %>
    <%= form.textarea :notes, size: "15x5", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code, class: "form-control" %>
  </div>
  </br>
  <div>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
  </br>
  <%= link_to "Back", :back %>
<% end %>
