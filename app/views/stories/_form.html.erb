<%= form_for (@story) do |form| %>
  <% if story.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
        <% story.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  </p>
  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :link, style: "display: block" %>
    <%= form.text_field :link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <% @story.tag_types.each do |tag| %>
    <div class="form-group">
      <strong><%= form.label tag.to_s.titleize %></strong><br />
      <% tag_sym = "#{tag.to_s.singularize}_list".to_sym %>
      <% tag_list = "#{tag.to_s.singularize}_list" %>
      <%= form.text_field tag_sym, value: @story.send(tag_list).to_s, :placeholder => "Comma-separated list of #{tag.to_s}", class: 'form-control' %>
    </div>
  <% end %>

  <div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>

<% end %>
