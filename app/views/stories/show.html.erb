<h1>Show Story</h1>
<h2><%= @story.name %></h2>
<p>
  <%= link_to @story.link, @story.link %>
</p>
<p class="submitted_by">
  Submitted by:
  <span><%= @story.user.name %></span>
  |
  <span id="vote_score">
    Score: <%= @story.votes.size %>
  </span>
</p>
<div id="vote_form">
  <%= form_for [ @story, Vote.new ], remote: true do |f| %>
    <%= f.submit 'Vote for this story' %>
  <% end %>
</div>
<ul id="vote_history">
  <% if @story.votes.empty? %>
    <em>No votes yet!</em>
  <% else %>
    <%= render partial:'votes/vote',
        collection: @story.votes.latest %>
  <% end %>
</ul>
